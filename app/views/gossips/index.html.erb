  <!-- Vue de la page d'accueil de l'appication -->
<h2>HI <%= params[:id] %> ! Welcome to the Gossips Center :</h2>

<!-- Boucle qui parcours tous les gossips -->
<div class="card-columns">
    <% @gossips.each do |gossip|%>
    <!-- Affichage des information de chaques gossips -->
        <div class="card border-dark mb-3" style="max-width: 18rem;">
            <h5 class="card-text"><%= gossip.title %></h5>
            <blockquote class="blockquote mb-0">
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat.</p>
            <footer class="blockquote-footer">
                <small>
                    Author : <cite title="Source Title"><%= link_to "#{gossip.user.first_name}", gossip_path(gossip), class: "nav-link" %></cite>
                </small>
            </footer>
            </blockquote>
        </div>
    <% end %>
</div>