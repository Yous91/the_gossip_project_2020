<!-- Vue de la page d'accueil de l'appication -->
<h2>HI <%= params[:id] %> ! Welcome to the Gossips Center :</h2>
<p><%= link_to "New Gossip", new_gossip_path, class: "btn btn-secondary btn-block" %></p>
<!-- Boucle qui parcours tous les gossips -->
<div class="row">
    <% @gossips.sort_by(&:created_at).reverse.each do |gossip|%>
    <!-- Affichage des information de chaques gossips -->
            <div class="card w-100">
                <div class="card-body">
                    <h5 class="card-text"><%= gossip.title %></h5>
                    <blockquote class="blockquote mb-0">
                    <p><%= gossip.content %></p>
                    <footer class="blockquote-footer">
                        <small>Author : <cite title="Source Title"><%= gossip.user.first_name %></cite></small><br/>
                        <small><cite title="Source Title"><%= gossip.created_at.strftime("Created : %m/%d/%Y at %I:%M %p") %></cite></small>
                        <p><%= link_to "Show Gossip", gossip_path(gossip), class: "btn btn-outline-secondary btn-block" %></p>
                    </footer>
                    </blockquote>
                </div>
            </div>
    <% end %>
</div>

